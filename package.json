{
  "name": "twig-sass-skeleton",
  "displayName": "twig-sass-skeleton",
  "description": "This extension will convert your twig file to sass skeleton",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0",
    "cursor": "^2.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:twig-sass-skeleton.showSidebar",
    "onLanguage:html",
    "onLanguage:twig",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "twig-sass-skeleton.showSidebar",
        "title": "Show SASS Skeleton Sidebar"
      }
    ],
    "keybindings": [
      {
        "command": "twig-sass-skeleton.showSidebar",
        "key": "cmd+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@types/webpack": "^5.28.5",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "cheerio-select": "^2.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AP0L0N/twig-sass-skeleton.git"
  }
}
